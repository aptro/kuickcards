<div id="stats" v-cloak>

  <div class="ui container">
    <div class="ui compact basic segment">
      <div class="ui inverted dimmer">
        <div class="ui text loader">Loading</div>
      </div>
      <select class="ui fluid dropdown" v-model="filter" @change="filterChanged()">
        <option value="">Date Filter</option>
        <option value="1">Last 24 hours</option>
        <option value="7">last 7 days</option>
        <option value="30">last 30 days</option>
        <option value="all">Till so far</option>
      </select>
      <br>
      <div class="ui middle aligned divided relaxed list">
        <div class="item">
          <div class="header">Number of times cards reviewed</div>
          {{cards_learned }}
        </div>
        <div class="item">
          <div class="header">Number of cards added</div>
          {{ total_cards }}
        </div>
      </div>
    </div>
  </div>
</div>
<%- /* Expose server-rendered data as window.SAILS_LOCALS :: */ exposeLocalsToBrowser() %>